{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": ".",
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types",
      "./types/",
    ],
    "baseUrl": "./",
    "paths": {
      "boilersmith/*": [
        "src/boilersmith/*"
      ]
    }
  },
  "include": [
    "src/**/*", "test/**/*"
  ]
}
