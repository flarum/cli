{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types",
      "./types/",
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/subfolder/node_modules/@types/*",
        "*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
