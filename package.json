{
  "name": "@flarum/cli",
  "description": "A CLI for developing Flarum extensions",
  "version": "1.0.0",
  "author": "Flarum Team",
  "bin": {
    "fl": "bin/run",
    "flarum-cli": "bin/run"
  },
  "bugs": "https://github.com/flarum/cli/issues",
  "devDependencies": {
    "@babel/core": "^7",
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/test": "^1.2.8",
    "@types/chai": "^4.2.20",
    "@types/ejs": "^3.1.0",
    "@types/jest": "^27.0.3",
    "@types/mem-fs-editor": "^7.0.0",
    "@types/node": "^16.11.7",
    "@types/pick-deep": "^1.0.0",
    "@types/pluralize": "0.0.29",
    "@types/prompts": "^2.0.14",
    "@types/string": "0.0.31",
    "@types/yosay": "^0.0.29",
    "babel-jest": "^27.4.5",
    "babel-plugin-module-resolver": "^4.1.0",
    "chai": "^4.3.3",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4.0.0",
    "eslint-config-oclif-typescript": "1.0.2",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-plugin-import": "^2.25.3",
    "globby": "^10.0.2",
    "jest": "^27.4.5",
    "jest-extended": "^1.2.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^3.9.9"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "boilerplate",
    "stubs",
    "php-subsystem"
  ],
  "homepage": "https://github.com/flarum/cli",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "additionalHelpFlags": [
      "-h"
    ],
    "additionalVersionFlags": [
      "-v"
    ],
    "commands": "./lib/commands",
    "bin": "flarum-cli",
    "helpClass": "./lib/help",
    "topicSeparator": " ",
    "topics": {
      "make backend": {
        "description": "Add backend boilerplate code to an existing Flarum extension."
      },
      "make frontend": {
        "description": "Add frontend boilerplate code to an existing Flarum extension."
      },
      "make": {
        "description": "Add boilerplate code to an existing Flarum extension."
      },
      "infra": {
        "description": "Add/modify infrastructure for an existing Flarum extension."
      }
    },
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-version"
    ]
  },
  "repository": "flarum/cli",
  "scripts": {
    "oclif-dev": "node -r tsconfig-paths/register node_modules/.bin/oclif-dev",
    "format": "eslint . --ext .ts --config .eslintrc --fix",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "rm -rf lib && tsc -b && yarn oclif-dev manifest && yarn oclif-dev readme",
    "test": "jest",
    "version": "yarn oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "@babel/preset-env": "^7.14.2",
    "@oclif/core": "^1.0.11",
    "@oclif/errors": "^1.3.5",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.0.11",
    "@oclif/plugin-version": "^1",
    "chalk": "^2.4.2",
    "cli-ux": "^6.0.6",
    "ejs": "^3.1.6",
    "glob": "^7.1.6",
    "just-safe-get": "^2.1.2",
    "mem-fs": "^2.2.1",
    "mem-fs-editor": "^8.0.0",
    "modern-async": "^1.0.2",
    "pick-deep": "^1.0.0",
    "pluralize": "^8.0.0",
    "prompts": "^2.4.0",
    "spdx-license-list": "^6.4.0",
    "string": "^3.3.3",
    "tslib": "^1.14.1",
    "yosay": "^2.0.2"
  }
}
